{
  "presets": [
    "es2015",
    "react",
    "stage-0"
  ],
  "env": {
    "test": {
      "presets": [
        ["es2015", { "modules": "commonjs" }],
        "react",
        "stage-0"
      ],
      "plugins": [
        "add-module-exports",
        "transform-runtime",
        "transform-decorators-legacy",
        "syntax-class-properties",
        "transform-class-properties",
        "transform-proto-to-assign",
        [ "babel-plugin-transform-builtin-extend", { "globals": ["Error"] } ]
      ]
    }
  }
}
